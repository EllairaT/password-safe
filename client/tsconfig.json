{
	"compilerOptions": {
		"allowJs": true,
		"module": "commonjs",
		"lib": ["es6", "dom"],
		"noImplicitThis": true,
		"strictNullChecks": true,
		"jsx": "react",
		"target": "es6",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"sourceMap": true,
		"baseUrl": ".",
		"outDir": "dist",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": ["src/**/*", "index.d.ts"]
}
